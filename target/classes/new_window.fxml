<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.stavkova.kancelarie.NewWindowController" fx:id="selectedNumbersBox">
    <HBox spacing="10">
        <Label text="Ticket ID:"/>
        <Label fx:id="ticketIdLabel"/>
    </HBox>

    <Button text="Pridat" onAction="#addBet"/>

    <HBox spacing="10">
        <Label text="Bet Amount:"/>
        <Spinner fx:id="betAmountSpinner" promptText="Enter Bet Amount"/>
    </HBox>

    <Button text="PLAY" onAction="#play"/>

    <Button text="Close" onAction="#closeWindow"/>
</VBox>
